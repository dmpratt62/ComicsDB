<Window x:Class="ComicsDB.AuthorsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComicsDB"
        mc:Ignorable="d"
        Title="AuthorsDialog" Height="250" Width="400" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid Name="dgAuthors" Grid.Row="0" AutoGenerateColumns="True" SelectionMode="Single" CanUserAddRows= "True" IsSynchronizedWithCurrentItem="True">
            
        </DataGrid>
    </Grid>
</Window>
