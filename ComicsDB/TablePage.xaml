<Page x:Class="ComicsDB.TablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComicsDB"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="LightGray"
      Title="TablePage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0"  Name="dgComics" IsReadOnly="True" Background="Transparent"></DataGrid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Name="btnNew" Width="100" Margin="2" Click="BtnNew_Click">New</Button>
            <Button Name="btnEdit" Width="100" Margin="2">Edit</Button>
            <Button Name="btnDelete" Width="100" Margin="2">Delete</Button>
        </StackPanel>

        <!--<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Text="Table Page"/>-->
    </Grid>
</Page>
